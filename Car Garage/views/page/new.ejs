<% layout("/boilerplate/boilerplate") %>

    <body>
        <div class="row">
            <div class="col-8 offset-2">
                <br>
                <br>
                <p>Enter Car Details:</p>
                <form action="/home" method="post" class="needs-validation" novalidate>

                    <div class="mb-3">
                        <label for="name" class="form-label">Car Name:</label>
                        <input type="text" name="car[name]" placeholder="Enter Car Name" class="form-control" required>
                        <div class="valid-feedback">Success</div>
                        <div class="invalid-feedback">Enter car name !</div>
                    </div>
                    <div class="mb-3">
                        <label for="img" class="form-label">Image URL :</label>

                        <input type="text" name="car[Image]" placeholder="Image URL" class="form-control">

                    </div>

                    <div class="row">

                        <div class="mb-3 col-md-4">
                            <label for="speed" class="form-label">Speed:</label>

                            <input type="text" name="car[speed]" placeholder="Enter Car speed" class="form-control" required>
                            <div class="valid-feedback">Success</div>
                        <div class="invalid-feedback">Enter speed !</div>
                        </div>
                        <div class="mb-3 col-md-4">
                            <label for="hp" class="form-label">Horsepower:</label>

                            <input type="text" name="car[hp]" placeholder="Enter Car hp" class="form-control" required>
                            <div class="valid-feedback">Success</div>
                        <div class="invalid-feedback">Enter car horsepower !</div>
                        </div>
                        <div class="mb-3 col-md-4">
                            <label for="Price" class="form-label">Price:</label>

                            <input type="text" name="car[price]" placeholder="Enter Car price" class="form-control" required>
                            <div class="valid-feedback">Success</div>
                        <div class="invalid-feedback">Enter price!</div>
                        </div>
                    </div>

                    <br>
                    <button class="btn btn-dark add-btn">Add</button>
                    <br>
                    <br>

                </form>
            </div>

        </div>
        
    </body>