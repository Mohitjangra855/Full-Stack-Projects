<% layout("/boilerplate/boilerplates") %>
    <form action="/flipkart" method="post" class="needs-validation" novalidate>
        <div>
            <label class="form-label" for="name">Name</label>
            <input class="form-control" type="text" placeholder="item name" name="item[name]" id="name" required>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Please enter product name.
            </div>
        </div>
        <div>
            <label class="form-label" for="company">Company</label>
            <input class="form-control" type="text" placeholder="company name" name="item[company]" id="company" required>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Please enter product company name.
            </div>
        </div>
        <div>
            <label class="form-label" for="price">price</label>
            <input class="form-control" type="number" placeholder="enter item price" name="item[price]" id="price" required>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Please enter product price.
            </div>
        </div>
        <div>
            <label class="form-label" for="category">Category</label>
            <input class="form-control" type="text" placeholder="category name" name="item[category]" id="category" required>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Please enter product category.
            </div>
        </div>
        <div>
            <label class="form-label" for="image">Image</label>
            <input class="form-control" type="text" placeholder="image link" name="item[image]" id="image" required>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Please enter a valid image link.
            </div>
        </div>
        <div>
            <label class="form-label" for="details">Details</label>
            <textarea name="item[details]" class="form-control" id="details" required></textarea>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Please enter product details.
            </div>
        </div>
        <p class="d-flex justify-content-end">
            <button class="btn btn-success mt-2">Save</button>
        </p>
    </form>